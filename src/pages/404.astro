---
import Layout from "../layouts/Layout.astro";
---
<Layout title="404 â€” Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="container" style="padding: var(--spacing-2xl) var(--spacing-md); text-align: center; min-height: 60vh; display: flex; align-items: center; justify-content: center;">
    <div class="content-narrow reveal">
      <h1 style="font-size: 6rem; margin-bottom: var(--spacing-sm); color: var(--color-primary);">404</h1>
      <h2 style="margin-bottom: var(--spacing-md);">Page Not Found</h2>
      <p style="font-size: 1.125rem; color: var(--color-text-muted); margin-bottom: var(--spacing-xl); line-height: 1.8;">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <div style="display: flex; gap: var(--spacing-md); justify-content: center; flex-wrap: wrap;">
        <a href="/" class="btn">Go Home</a>
        <a href="/projects" class="btn btn-secondary">View Projects</a>
      </div>
    </div>
  </div>
</Layout>
