---
import Layout from "../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

const projects: CollectionEntry<"projects">[] = await getCollection("projects");
---
<Layout title="Max Burkhardt — Portfolio">
  <section class="hero">
    <div class="hero-inner">
      <div class="hero-headshot">
        <img src="/classic-headshot.png" alt="Portrait of Max Burkhardt" />
      </div>
      <div class="hero-intro">
        <p>
          A selection of projects focused on
          <strong>gameplay feel</strong>,
          <strong>AI &amp; systems</strong>, and
          <strong>level design</strong>. I enjoy building responsive movement,
          readable combat, and tools that help teams move faster.
        </p>
      </div>
    </div>
  </section>

  <section class="section">
    <h2 class="section-title">Technical Experience</h2>
    <div class="tag-row">
      <span class="tag">C#</span>
      <span class="tag">Unity</span>
      <span class="tag">MonoGame</span>
      <span class="tag">JavaScript</span>
      <span class="tag">TypeScript</span>
      <span class="tag">Git</span>
      <span class="tag">Game AI</span>
      <span class="tag">Level Design</span>
    </div>
  </section>

  <section class="section">
    <h2 class="section-title">Projects</h2>

    <div class="project-list">
      {projects.map((p) => (
        <a class="project-row" href={`/projects/${p.slug}/`}>
          <div class="project-media">
            <div class="project-thumb">
              <span>{p.data.title}</span>
            </div>
          </div>
          <div class="project-body">
            <div class="project-heading">
              <h3>{p.data.title}</h3>
              {p.data.role && <p class="project-role">{p.data.role}</p>}
            </div>
            {p.data.pitch && (
              <p class="project-pitch">
                {p.data.pitch}
              </p>
            )}
            {p.data.highlights && p.data.highlights.length > 0 && (
              <div class="project-meta">
                {p.data.highlights.slice(0, 3).map((h) => (
                  <span class="meta-pill">{h}</span>
                ))}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- About AT THE BOTTOM -->
  <section class="section section-alt">
    <div class="about">
      <h2>Hi, I'm Max</h2>
      <p>
        I’m a game development student at HvA who loves working on gameplay, AI, and level design.
        I care about responsive controls, clear feedback, and clean code that other people enjoy
        working with.
      </p>
      <p>
        I like taking on challenging problems, iterating quickly, and collaborating with designers
        and artists to make ideas feel great in‑game.
      </p>
      <p>
        Want to reach out? You can contact me via 
        <a href="mailto:your.email@example.com">email</a> or find more of my work on 
        <a href="https://github.com/murkyperki" target="_blank" rel="noreferrer">GitHub</a>.
      </p>
    </div>
  </section>

  <style>
    .hero {
      max-width: 1100px;
      margin: 2.5rem auto 1.5rem;
      padding: 0 2rem;
    }
	  .hero-inner {
      display: grid;
      grid-template-columns: auto minmax(0, 1.4fr);
      gap: 2rem;
      align-items: center;
    }

	.hero-intro {
      background: var(--card);
      border-radius: 6px;
      border: 1px solid var(--border);
      padding: 1.25rem 1.5rem;
      font-size: 0.95rem;
      color: var(--muted);
    }
	.hero-intro strong {
      color: var(--text);
      font-weight: 600;
    }

	  .hero-headshot img {
      width: 180px;
      height: 180px;
      border-radius: 999px;
      object-fit: cover;
      display: block;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.45);
    }

    .hero-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 2rem;
      margin-bottom: 1.75rem;
    }

    .hero-name {
      font-size: 2.75rem;
      font-weight: 800;
      letter-spacing: 0.02em;
    }

    .hero-title {
      margin-top: 0.25rem;
      font-size: 0.95rem;
      text-transform: uppercase;
      letter-spacing: 0.18em;
      color: var(--muted);
    }

    .hero-actions {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .primary-button,
    .icon-button {
      border-radius: 999px;
      padding: 0.55rem 1.3rem;
      font-size: 0.85rem;
      font-weight: 600;
      text-decoration: none;
      border: 1px solid var(--border);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      transition: background 0.15s ease, transform 0.1s ease, box-shadow 0.15s ease;
      cursor: pointer;
      white-space: nowrap;
    }

    .primary-button {
      background: #f97373;
      border-color: #f97373;
      color: #111;
      box-shadow: 0 8px 18px rgba(249, 115, 115, 0.35);
    }

    .primary-button:hover {
      background: #fb6868;
      transform: translateY(-1px);
      box-shadow: 0 10px 22px rgba(249, 115, 115, 0.45);
    }

    .icon-button {
      background: var(--card);
      color: var(--muted);
    }

    .icon-button:hover {
      background: var(--card-hover);
      color: var(--text);
      transform: translateY(-1px);
    }

    .highlight-card {
      background: var(--card);
      border-radius: 6px;
      border: 1px solid var(--border);
      padding: 1.25rem 1.5rem;
      font-size: 0.95rem;
      color: var(--muted);
      max-width: 650px;
    }

    .highlight-card strong {
      color: var(--text);
      font-weight: 600;
    }

    .section {
      max-width: 1100px;
      margin: 0 auto;
      padding: 1.5rem 2rem 2.25rem;
    }

    .section-alt {
      background: #97b3b2;
      color: #111;
      margin-top: 1.5rem;
      padding-top: 2.25rem;
      padding-bottom: 2.25rem;
    }

    .section-alt a {
      color: #b61f57;
    }

    .section-title {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 1.25rem;
    }

     .tag-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      padding: 0.35rem 0.75rem;
      border-radius: 999px;
      border: 1px solid var(--border);
      background: var(--card);        /* was #111111 */
      color: var(--text);             /* ensure contrast */
      font-size: 0.8rem;
    }

	:root[data-theme="light"] .tag,
    [data-theme="light"] .tag {
      background: #ffffff;
      color: #111827;
      border-color: #e5e7eb;
    }
    .about {
      max-width: 820px;
      margin: 0 auto;
    }

    .about h2 {
      font-size: 1.4rem;
      margin-bottom: 1rem;
    }

    .about p {
      font-size: 0.95rem;
      line-height: 1.7;
      margin-bottom: 0.9rem;
    }

          /* PROJECTS: 2‑column grid, simple “card” style like the reference */
    .project-list {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.75rem;
      padding-bottom: 3rem;
    }

   .project-row {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      background: #2b2a2ae7;
      border-radius: 2px;
      border: 1px solid #07070700;
      overflow: hidden;
      transition:
        box-shadow 0.18s ease,
        background 0.18s ease,
        filter 0.18s ease;
    }

    .project-row:hover {
      /* no move, no red border */
      background: #0b0f19;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.45);
      filter: saturate(1.08);
    }
    .project-media {
      position: relative;
      background: #000;
      overflow: hidden;
    }

    .project-thumb {
      width: 100%;
      aspect-ratio: 16 / 9;
      display: flex;
      align-items: flex-end;
      justify-content: flex-start;
      padding: 0.75rem 1rem;
      background: #292929; /* fallback if no real image */
    }

    .project-thumb span {
      font-size: 0.85rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.85);
    }

    .project-body {
      padding: 1.2rem 1.5rem 1.4rem;
      display: flex;
	  color: #8d2525;
      flex-direction: column;
      gap: 0.55rem;
    }

    .project-heading h3 {
      font-size: 1.15rem;
      margin-bottom: 0.1rem;
      color: #f89ab5; /* soft pink title like the reference */
      transition: color 0.18s ease;
    }

    .project-row:hover .project-heading h3 {
      color: #e2e2e2; /* title lights up */
    }

    .project-role {
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.16em;
      color: #9ca3af;
    }

    .project-pitch {
      font-size: 0.9rem;
      color: #e5e7eb;
    }

    .project-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
      margin-top: 0.4rem;
    }

    .meta-pill {
      font-size: 0.8rem;
      padding: 0.25rem 0.6rem;
      border-radius: 999px;
      background: #282c35;
      color: #e5e7eb;
      border: 1px solid #1f2937;
    }

    :root[data-theme="light"] .project-row,
    [data-theme="light"] .project-row {
      background: #ffffff;
      border-color: #e5e7eb;
    }

    :root[data-theme="light"] .project-row:hover,
    [data-theme="light"] .project-row:hover {
      background: #f9fafb;
      /* keep same border color, no red edge */
      box-shadow: 0 10px 24px rgba(15, 23, 42, 0.12);
    }

    :root[data-theme="light"] .project-pitch,
    [data-theme="light"] .project-pitch {
      color: #374151;
    }

    :root[data-theme="light"] .project-role,
    [data-theme="light"] .project-role {
      color: #6b7280;
    }

    :root[data-theme="light"] .meta-pill,
    [data-theme="light"] .meta-pill {
      background: #f3f4f6;
      color: #111827;
      border-color: #e5e7eb;
    }

    @media (max-width: 900px) {
      .project-list {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 900px) {
      .hero {
        padding: 0 1.25rem;
      }

      .section {
        padding: 1.5rem 1.25rem 2rem;
      }

      .hero-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .hero-actions {
        margin-top: 0.75rem;
      }

      .project-list {
        grid-template-columns: 1fr; /* 1 column on small screens */
      }
    }

    @media (max-width: 600px) {
      .hero-name {
        font-size: 2.1rem;
      }

      .hero-title {
        font-size: 0.85rem;
      }

      .primary-button,
      .icon-button {
        padding-inline: 1rem;
      }
    }
  </style>
</Layout>