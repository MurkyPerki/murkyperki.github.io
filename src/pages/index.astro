---
import Layout from "../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

const projects: CollectionEntry<"projects">[] = await getCollection("projects");
---
<Layout title="Max Burkhardt â€” Portfolio">
  <!-- Projects Section -->
  <section class="projects-section">
    <div class="projects-grid">
      {projects.map((p) => (
        <a class="project-card" href={`/projects/${p.slug}/`}>
          <div class="project-thumbnail">
            <div class="thumbnail-placeholder">
              <span>{p.data.title}</span>
            </div>
            <!-- <img src={`/images/projects/${p.slug}.jpg`} alt={p.data.title} /> -->
          </div>
          <div class="project-info">
            <h3>{p.data.title}</h3>
            {p.data.role && <p class="role">{p.data.role}</p>}
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- About Section - Compact Footer -->
  <section class="about-section">
    <div class="about-content">
      <h2>About Me</h2>
      <p class="about-intro">
        I'm a game development student at HvA with a passion for gameplay programming, 
        level design, and AI implementation. I love making movement feel responsive and 
        combat satisfying.
      </p>
      
      <div class="skills-compact">
        <div class="skill-list">
          <strong>Tech:</strong> C#, JavaScript, TypeScript, Unity, MonoGame, Git
        </div>
      </div>

      <div class="contact-links">
        <a href="mailto:your.email@example.com" target="_blank" rel="noreferrer">Email</a>
        <a href="https://github.com/murkyperki" target="_blank" rel="noreferrer">GitHub</a>
        <a href="/CV.pdf" target="_blank">Resume</a>
      </div>
    </div>
  </section>

  <style>
    /* Projects Section - Main Focus */
    .projects-section {
      max-width: 1400px;
      margin: 3rem auto 6rem;
      padding: 0 2rem;
      min-height: 70vh;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
      gap: 2.5rem;
    }

    .project-card {
      display: block;
      text-decoration: none;
      color: inherit;
      transition: opacity 0.2s ease;
      cursor: pointer;
    }

    .project-card:hover {
      opacity: 0.8;
    }

    .project-thumbnail {
      width: 100%;
      aspect-ratio: 16/10;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 1rem;
      position: relative;
    }

    .thumbnail-placeholder {
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, var(--card) 0%, var(--border) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .thumbnail-placeholder::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(168, 85, 247, 0.05) 0%, rgba(192, 132, 252, 0.05) 100%);
    }

    .thumbnail-placeholder span {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--muted);
      opacity: 0.3;
      z-index: 1;
      position: relative;
    }

    .project-thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .project-info h3 {
      font-size: 1.375rem;
      font-weight: 600;
      margin-bottom: 0.375rem;
      line-height: 1.3;
    }

    .role {
      color: var(--muted);
      font-size: 1rem;
      font-weight: 400;
      margin: 0;
      line-height: 1.5;
    }

    /* About Section - Compact Footer */
    .about-section {
      background: var(--card);
      border-top: 1px solid var(--border);
      padding: 2.5rem 2rem;
      margin-top: 1rem;
    }

    .about-content {
      max-width: 700px;
      margin: 0 auto;
      text-align: center;
    }

    .about-section h2 {
      font-size: 1.375rem;
      font-weight: 700;
      margin-bottom: 2rem;
    }

    .about-intro {
      font-size: 0.9375rem;
      line-height: 1.6;
      color: var(--muted);
      margin-bottom: 1.5rem;
    }

    .skills-compact {
      margin-bottom: 1.5rem;
    }

    .skill-list {
      font-size: 0.875rem;
      color: var(--muted);
      line-height: 1.6;
    }

    .skill-list strong {
      color: var(--text);
      font-weight: 600;
    }

    .contact-links {
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .contact-links a {
      color: var(--link);
      text-decoration: none;
      font-size: 0.9375rem;
      font-weight: 500;
      transition: opacity 0.2s ease;
    }

    .contact-links a:hover {
      opacity: 0.7;
    }

    @media (max-width: 768px) {
      .projects-section {
        padding: 0 1rem;
        margin: 2rem auto 4rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
        gap: 2.5rem;
      }

      .about-section {
        padding: 2rem 1rem;
      }

      .contact-links {
        gap: 1.5rem;
      }
    }

    @media (min-width: 769px) and (max-width: 1100px) {
      .projects-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }
  </style>
</Layout>