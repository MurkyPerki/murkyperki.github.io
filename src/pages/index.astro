---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Max Burkhardt â€” Portfolio">
  <section style="max-width: 900px; margin: 2rem auto 0;">
    <div class="hero">
      <h1>Max Burkhardt</h1>
      <p class="subtitle">Game Developer & Designer</p>
      <p class="intro">
        Game dev student at HvA with a passion for gameplay feel, level design, and clean code.
      </p>
    </div>

    <div class="explore-grid">
      <a class="explore-card" href="/projects">
        <div class="card-image">
          <div class="placeholder-content">Projects</div>
          <!-- Replace with: <img src="/images/projects-preview.jpg" alt="Projects" /> -->
        </div>
        <div class="card-info">
          <h3>Projects</h3>
          <p>Game development portfolio</p>
        </div>
      </a>
      
      <a class="explore-card" href="/about">
        <div class="card-image">
          <div class="placeholder-content">About</div>
          <!-- Replace with: <img src="/images/about-preview.jpg" alt="About" /> -->
        </div>
        <div class="card-info">
          <h3>About Me</h3>
          <p>Skills & experience</p>
        </div>
      </a>
      
      <a class="explore-card" href="https://github.com/murkyperki" target="_blank" rel="noreferrer">
        <div class="card-image">
          <div class="placeholder-content">GitHub</div>
          <!-- Replace with: <img src="/images/github-preview.jpg" alt="GitHub" /> -->
        </div>
        <div class="card-info">
          <h3>GitHub</h3>
          <p>Code repositories</p>
        </div>
      </a>
      
      <a class="explore-card" href="/CV.pdf" target="_blank">
        <div class="card-image">
          <div class="placeholder-content">Resume</div>
          <!-- Replace with: <img src="/images/cv-preview.jpg" alt="CV" /> -->
        </div>
        <div class="card-info">
          <h3>Resume</h3>
          <p>Download CV</p>
        </div>
      </a>
    </div>
  </section>

  <style>
    .hero {
      text-align: center;
      margin-bottom: 4rem;
      padding: 2rem 1rem;
    }

    .hero h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, #dedfe0 0%, #b2adb6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .subtitle {
      font-size: 1.5rem;
      color: var(--muted);
      margin-bottom: 1.5rem;
      font-weight: 500;
    }

    .intro {
      font-size: 1.125rem;
      color: var(--text);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.7;
    }

    .explore-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .explore-card {
      display: block;
      text-decoration: none;
      color: inherit;
      transition: opacity 0.2s ease;
    }

    .explore-card:hover {
      opacity: 0.5;
    }

    .card-image {
      width: 100%;
      aspect-ratio: 4/3;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: 0.75rem;
      position: relative;
    }

    .placeholder-content {
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--muted);
      opacity: 0.3;
      background: linear-gradient(135deg, var(--card) 0%, var(--border) 50%);
    }

    .card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      position: relative;
      z-index: 2;
    }

    .card-info h3 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .card-info p {
      font-size: 0.9375rem;
      color: var(--muted);
      margin: 0;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }
      .subtitle {
        font-size: 1.25rem;
      }
      .explore-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>