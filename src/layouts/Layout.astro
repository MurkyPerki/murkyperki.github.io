---
const { title = "Max Burkhardt â€” Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <style>
      :root {
        --maxw: 1100px;
      }
      
      [data-theme="dark"] {
        --bg: #202020;
        --text: #e8e8e8;
        --muted: #b4b4b4;
        --card: #242424;
        --card-hover: #2d2d2d;
        --link: #5588f7;
        --link-hover: #899afa;
        --border: #3a3a3a;
        --nav-active: #2d2d2d;
      }
      
      [data-theme="light"] {
        --bg: #f5f1e8;
        --text: #2d2a24;
        --muted: #6b6760;
        --card: #faf8f3;
        --card-hover: #ffffff;
        --link: #3a96ed;
        --link-hover: #255fcc;
        --border: #e0dcd0;
        --nav-active: #ebe7dc;
      }
      
      * { box-sizing: border-box; margin: 0; padding: 0; }
      
      body {
        background: var(--bg);
        color: var(--text);
        font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        line-height: 1.6;
        transition: background-color 0.3s ease, color 0.3s ease;
      }
      
      header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--bg);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--border);
        transition: background-color 0.3s ease, border-color 0.3s ease;
      }
      
      [data-theme="dark"] header {
        background: rgba(26, 26, 26, 0.8);
      }
      
      [data-theme="light"] header {
        background: rgba(245, 241, 232, 0.8);
      }
      
      .header-container {
        max-width: var(--maxw);
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
      }
      
      .logo {
        position: absolute;
        left: 1.5rem;
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text);
        text-decoration: none;
        letter-spacing: -0.02em;
      }
      
      .nav-content {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      
      nav {
        display: flex;
        gap: 0.5rem;
        align-items: center;
      }
      
      nav a {
        color: var(--muted);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9375rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.2s ease;
      }
      
      nav a:hover {
        color: var(--text);
        background: var(--nav-active);
      }
      
      nav a.active {
        color: var(--text);
        background: var(--nav-active);
      }
      
      nav a.external {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
      }
      
      .theme-toggle {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 0.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        color: var(--text);
      }
      
      .theme-toggle:hover {
        background: var(--card-hover);
        border-color: var(--link);
      }
      
      .theme-icon {
        width: 20px;
        height: 20px;
        display: block;
      }
      
      main {
        max-width: var(--maxw);
        margin: 0 auto;
        padding: 3rem 1.5rem;
        min-height: calc(100vh - 200px);
      }
      
      h1, h2, h3 { line-height: 1.2; }
      h1 { font-size: 2.5rem; font-weight: 800; }
      h2 { font-size: 1.875rem; font-weight: 700; margin-bottom: 1.5rem; }
      h3 { font-size: 1.25rem; font-weight: 600; }
      
      .muted { color: var(--muted); }
      
      .grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        margin-top: 2rem;
      }
      
      .card {
        display: block;
        padding: 1.75rem;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 16px;
        color: inherit;
        text-decoration: none;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
      }
      
      [data-theme="light"] .card {
        box-shadow: 0 2px 4px rgba(45, 42, 36, 0.08), 0 4px 8px rgba(45, 42, 36, 0.06);
      }
      
      .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--link), var(--link-hover));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
      }
      
      .card:hover {
        transform: translateY(-4px);
        border-color: var(--link);
        background: var(--card-hover);
      }
      
      [data-theme="dark"] .card:hover {
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.3), 0 4px 6px -2px rgba(0,0,0,0.2);
      }
      
      [data-theme="light"] .card:hover {
        box-shadow: 0 8px 16px rgba(45, 42, 36, 0.12), 0 4px 8px rgba(45, 42, 36, 0.08);
      }
      
      .card:hover::before {
        transform: scaleX(1);
      }
      
      .card-icon {
        font-size: 2rem;
        margin-bottom: 0.75rem;
        display: block;
      }
      
      .card h3 {
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
      }
      
      .card p {
        color: var(--muted);
        font-size: 0.9375rem;
        line-height: 1.5;
      }
      
      footer {
        max-width: var(--maxw);
        margin: 0 auto;
        padding: 2rem 1.5rem;
        text-align: center;
        color: var(--muted);
        font-size: 0.875rem;
        border-top: 1px solid var(--border);
      }
      
      @media (max-width: 768px) {
        .header-container {
          justify-content: space-between;
        }
        .logo {
          position: static;
        }
        .nav-content {
          gap: 0.5rem;
        }
        nav {
          gap: 0.25rem;
        }
        nav a {
          padding: 0.5rem 0.75rem;
          font-size: 0.875rem;
        }
        h1 { font-size: 2rem; }
        .grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
    <script>
      // Theme toggle functionality
      function initTheme() {
        const theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
      }
      
      function toggleTheme() {
        const html = document.documentElement;
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        
        // Update icon
        updateThemeIcon(newTheme);
      }
      
      function updateThemeIcon(theme: string) {
        const icon = document.querySelector('.theme-icon');
        if (icon) {
          icon.innerHTML = theme === 'dark' 
            ? '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>'
            : '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>';
        }
      }
      
      // Initialize theme on page load
      initTheme();
      
      // Set up theme toggle button
      document.addEventListener('DOMContentLoaded', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        updateThemeIcon(currentTheme);
        
        const themeToggle = document.querySelector('.theme-toggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', toggleTheme);
        }
      });
      
      // Handle page navigation (for Astro view transitions)
      document.addEventListener('astro:page-load', () => {
        initTheme();
        const currentTheme = document.documentElement.getAttribute('data-theme');
        updateThemeIcon(currentTheme);
        
        const themeToggle = document.querySelector('.theme-toggle');
        if (themeToggle) {
          themeToggle.removeEventListener('click', toggleTheme);
          themeToggle.addEventListener('click', toggleTheme);
        }
      });
    </script>
  </head>
  <body>
    <header>
      <div class="header-container">
        <a href="/" class="logo">MB</a>
        <div class="nav-content">
          <nav>
            <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
            <a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a>
            <a href="/projects" class={currentPath.startsWith('/projects') ? 'active' : ''}>Projects</a>
            <a href="https://github.com/murkyperki" class="external" target="_blank" rel="noreferrer">
              GitHub
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
              </svg>
            </a>
            <a href="/CV.pdf" class="external" target="_blank">
              CV
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
              </svg>
            </a>
          </nav>
          <button class="theme-toggle" aria-label="Toggle theme">
            <span class="theme-icon"></span>
          </button>
        </div>
      </div>
    </header>
    <main><slot /></main>
    <footer>
      <p>&copy; 2025 Max Burkhardt. All rights reserved.</p>
    </footer>
  </body>
</html>