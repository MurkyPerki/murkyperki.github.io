---
const { title = "Max Burkhardt â€” Portfolio", description = "Game development student passionate about gameplay programming, level design, and AI implementation." } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Pico.css CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css" />
    
    <!-- Page-specific head tags slot -->
    <slot name="head" />
    
    <style is:global>
      /* CSS Custom Properties */
      :root {
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2rem;
        --spacing-xl: 3rem;
        --spacing-2xl: 4rem;
        
        --container-max-width: 1200px;
        --content-max-width: 800px;
        
        --color-primary: #6366f1;
        --color-primary-hover: #4f46e5;
        --color-text: #1f2937;
        --color-text-muted: #6b7280;
        --color-bg: #ffffff;
        --color-bg-secondary: #f9fafb;
        --color-border: #e5e7eb;
        
        --transition-base: 200ms ease;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      }
      
      /* Override Pico defaults for cleaner look */
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', sans-serif;
        line-height: 1.7;
        color: var(--color-text);
        background-color: var(--color-bg);
      }
      
      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: var(--spacing-md);
      }
      
      h1 { font-size: 2.5rem; }
      h2 { font-size: 2rem; }
      h3 { font-size: 1.5rem; }
      
      /* Header / Navigation */
      header.site-header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--color-border);
        padding: var(--spacing-sm) 0;
      }
      
      .header-container {
        max-width: var(--container-max-width);
        margin: 0 auto;
        padding: 0 var(--spacing-md);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      
      .brand {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-text);
        text-decoration: none;
        letter-spacing: -0.02em;
      }
      
      .brand:hover {
        color: var(--color-primary);
      }
      
      nav {
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
      }
      
      nav a {
        color: var(--color-text-muted);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9375rem;
        padding: var(--spacing-xs) var(--spacing-sm);
        border-radius: 6px;
        transition: all var(--transition-base);
      }
      
      nav a:hover {
        color: var(--color-text);
        background: var(--color-bg-secondary);
      }
      
      nav a.active {
        color: var(--color-primary);
        background: var(--color-bg-secondary);
      }
      
      nav a.external-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
      }
      
      /* Main content area */
      main {
        min-height: calc(100vh - 200px);
      }
      
      .container {
        max-width: var(--container-max-width);
        margin: 0 auto;
        padding: 0 var(--spacing-md);
      }
      
      .content-narrow {
        max-width: var(--content-max-width);
        margin: 0 auto;
      }
      
      /* Grid utility */
      .grid {
        display: grid;
        gap: var(--spacing-lg);
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      }
      
      @media (max-width: 768px) {
        .grid {
          grid-template-columns: 1fr;
        }
      }
      
      /* Card component */
      .card {
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: 12px;
        padding: var(--spacing-lg);
        transition: all var(--transition-base);
        box-shadow: var(--shadow-sm);
        text-decoration: none;
        color: inherit;
        display: block;
      }
      
      .card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: var(--color-primary);
      }
      
      /* Tag pills */
      .tag {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: 999px;
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--color-text-muted);
        white-space: nowrap;
      }
      
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-xs);
        margin-top: var(--spacing-sm);
      }
      
      /* Buttons */
      .btn {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-xs);
        padding: 0.75rem 1.5rem;
        background: var(--color-primary);
        color: white;
        text-decoration: none;
        font-weight: 600;
        border-radius: 8px;
        transition: all var(--transition-base);
        border: none;
        cursor: pointer;
      }
      
      .btn:hover {
        background: var(--color-primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
      }
      
      .btn-secondary {
        background: white;
        color: var(--color-text);
        border: 2px solid var(--color-border);
      }
      
      .btn-secondary:hover {
        background: var(--color-bg-secondary);
        border-color: var(--color-primary);
        color: var(--color-primary);
      }
      
      /* Reveal animations */
      .reveal {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease, transform 0.6s ease;
      }
      
      .reveal.is-visible {
        opacity: 1;
        transform: translateY(0);
      }
      
      /* Add stagger delays for multiple reveals */
      .reveal:nth-child(1) { transition-delay: 0ms; }
      .reveal:nth-child(2) { transition-delay: 100ms; }
      .reveal:nth-child(3) { transition-delay: 200ms; }
      .reveal:nth-child(4) { transition-delay: 300ms; }
      
      /* Footer */
      footer {
        margin-top: var(--spacing-2xl);
        padding: var(--spacing-lg) 0;
        border-top: 1px solid var(--color-border);
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        h1 { font-size: 2rem; }
        h2 { font-size: 1.75rem; }
        
        .header-container {
          padding: 0 var(--spacing-sm);
        }
        
        nav {
          gap: 0.25rem;
        }
        
        nav a {
          padding: var(--spacing-xs);
          font-size: 0.875rem;
        }
        
        .container {
          padding: 0 var(--spacing-sm);
        }
      }
      
      /* Focus styles for accessibility */
      a:focus-visible,
      button:focus-visible {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }
    </style>
    
    <!-- Load reveal animation script -->
    <script src="/src/scripts/reveal.ts" type="module"></script>
  </head>
  <body>
    <header class="site-header">
      <div class="header-container">
        <a href="/" class="brand">Max Burkhardt</a>
        <nav aria-label="Main navigation">
          <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
          <a href="/projects" class={currentPath.startsWith('/projects') ? 'active' : ''}>Projects</a>
          <a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a>
          <a href="/CV.pdf" target="_blank" rel="noopener" class="external-icon">
            CV
