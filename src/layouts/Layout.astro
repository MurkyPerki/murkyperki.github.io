---
const { title = "Max Burkhardt — Portfolio" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <style>
      :root { --maxw: 980px; --muted:#666; }
      * { box-sizing: border-box; }
      body { margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; line-height:1.6; color:#111; }
      header, main, footer { max-width: var(--maxw); margin: 0 auto; padding: 1.25rem; }
      nav a { margin-right:.9rem; text-decoration:none; color:#06f; }
      .grid { display:grid; gap:1rem; grid-template-columns: repeat(auto-fit, minmax(260px,1fr)); }
      .card { border:1px solid #e9e9e9; border-radius:12px; padding:1rem; }
      .muted { color: var(--muted); }
    </style>
  </head>
  <body>
    <header>
      <h1 style="margin:.2rem 0;">Max Burkhardt</h1>
      <p class="muted" style="margin:.2rem 0 1rem;">Game Developer • Programmer (HvA)</p>
      <nav>
        <a href="/">Home</a>
        <a href="/projects">Projects</a>
        <a href="/about">About</a>
        <a href="/CV.pdf" target="_blank">CV (PDF)</a>
        <a href="https://github.com/MurkyPerki" target="_blank">GitHub</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="muted">© {new Date().getFullYear()} Max Burkhardt</footer>
  </body>
</html>
