---
const { title = "Max Burkhardt — Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    <style>
      :root {
        /* base palette (dark by default) */
        --bg: #05070b;
        --card: #111520;
        --card-hover: #181d2b;
        --text: #f7fafc;
        --muted: #9ca3af;
        --border: #272b3a;
        --link: #f97373;
        --link-hover: #fb8a8a;

        --accent: #f97373;
        --accent-soft: rgba(249, 115, 115, 0.12);
      }

      [data-theme="dark"] {
        --bg: #000000;
        --card: #2b2d33;
        --card-hover: #181d2b;
        --text: #f7fafc;
        --muted: #9ca3af;
        --border: #272b3a;
        --link: #f97373;
        --link-hover: #fb8a8a;

        --accent: #f97373;
        --accent-soft: rgba(82, 76, 76, 0.12);
      }

      [data-theme="light"] {
        --bg: #e9eeee;
        --card: #ffffff;
        --card-hover: #f1f2fa;
        --text: #111827;
        --muted: #6b7280;
        --border: #e5e7eb;
        --link: #ef4444;
        --link-hover: #dc2626;

        --accent: #ef4444;
        --accent-soft: rgba(239, 68, 68, 0.08);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        max-width: 100%;
        margin: 0 auto;
        min-height: calc(100vh - 200px);
        flex: 1;
      }

      a {
        color: var(--link);
      }

      a:hover {
        color: var(--link-hover);
      }

      header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--bg);
        border-bottom: 1px solid var(--border);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
      }

      [data-theme="dark"] header {
        background: rgba(5, 7, 11, 0.9);
      }

      [data-theme="light"] header {
        background: rgba(244, 245, 251, 0.9);
      }

      .header-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0.75rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
      }

      .logo {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text);
        text-decoration: none;
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
      }

      .logo-name {
        font-size: 1.1rem;
        font-weight: 700;
      }

      .logo-title {
        font-size: 0.78rem;
        color: var(--muted);
        text-transform: uppercase;
        letter-spacing: 0.16em;
      }

      .nav-content {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      nav {
        display: flex;
        gap: 0.75rem;
        margin-right: 0.5rem;
      }

      nav a {
        font-size: 0.85rem;
        padding: 0.35rem 0.7rem;
        border-radius: 999px;
        text-decoration: none;
        color: var(--muted);
        border: 1px solid transparent;
        transition: background 0.15s ease, color 0.15s ease, border-color 0.15s ease;
      }

      nav a:hover {
        background: var(--card-hover);
        color: var(--text);
      }

      nav a.active {
        color: var(--text);
        border-color: var(--border);
        background: var(--card-hover);
      }

      .primary-button,
      .icon-button {
        border-radius: 999px;
        padding: 0.4rem 1.1rem;
        font-size: 0.8rem;
        font-weight: 600;
        text-decoration: none;
        border: 1px solid var(--border);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        transition: background 0.15s ease, transform 0.1s ease, box-shadow 0.15s ease;
        cursor: pointer;
        white-space: nowrap;
      }

      .primary-button {
        background: var(--accent);
        border-color: var(--accent);
        color: #111827;
        box-shadow: 0 6px 14px var(--accent-soft);
      }

      .primary-button:hover {
        background: var(--link-hover);
        border-color: var(--link-hover);
        transform: translateY(-1px);
        box-shadow: 0 8px 18px var(--accent-soft);
      }

      .icon-button {
        background: var(--card);
        color: var(--muted);
      }

      .icon-button:hover {
        background: var(--card-hover);
        color: var(--text);
        transform: translateY(-1px);
      }

      .theme-toggle {
        width: 2.1rem;
        height: 2.1rem;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: var(--card);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: var(--muted);
        font-size: 0.95rem;
        transition: background 0.15s ease, color 0.15s ease, transform 0.1s ease;
      }

      .theme-toggle:hover {
        background: var(--card-hover);
        color: var(--text);
        transform: translateY(-1px);
      }

      @media (max-width: 768px) {
        .header-container {
          padding-inline: 1.25rem;
        }

        nav {
          display: none;
        }
      }
    </style>

    <script>
      declare global {
        interface Window {
          __toggleTheme: () => void;
        }
      }

      (() => {
        const stored = window.localStorage.getItem("theme");
        const prefersDark =
          window.matchMedia &&
          window.matchMedia("(prefers-color-scheme: dark)").matches;
        const initial = stored || (prefersDark ? "dark" : "light");

        document.documentElement.setAttribute("data-theme", initial);

        window.__toggleTheme = () => {
          const current =
            document.documentElement.getAttribute("data-theme") || "dark";
          const next = current === "dark" ? "light" : "dark";
          document.documentElement.setAttribute("data-theme", next);
          window.localStorage.setItem("theme", next);
          const icon = document.querySelector("[data-theme-icon]");
          if (icon) icon.textContent = next === "dark" ? "☾" : "☼";
        };

        window.addEventListener("DOMContentLoaded", () => {
          const icon = document.querySelector("[data-theme-icon]");
          if (icon) {
            const current =
              document.documentElement.getAttribute("data-theme") || "dark";
            icon.textContent = current === "dark" ? "☾" : "☼";
          }
        });
      })();
    </script>
  </head>

  <body>
    <header>
      <div class="header-container">
        <a href="/" class="logo">
          <span class="logo-name">Max Burkhardt</span>
          <span class="logo-title">Gameplay Programmer</span>
        </a>

        <div class="nav-content">
          <nav>
            <a href="/" class={currentPath === "/" ? "active" : ""}>
              Projects
            </a>

            <a
              href="/design"
              class={currentPath.startsWith("/design") ? "active" : ""}
            >
              Concepts
            </a>

            <a
              href="/snippets"
              class={currentPath.startsWith("/snippets") ? "active" : ""}
            >
              Snippets
            </a>
          </nav>


          <a
            href="https://github.com/murkyperki"
            target="_blank"
            rel="noreferrer"
            class="icon-button"
          >
            GitHub
          </a>

          <a href="/CV.pdf" target="_blank" class="primary-button">
            Resume ↓
          </a>

          <button class="theme-toggle" onclick="window.__toggleTheme()">
            <span data-theme-icon>☾</span>
          </button>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>